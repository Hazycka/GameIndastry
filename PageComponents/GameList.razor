@if(ListOfGames is null)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://cs4.pikabu.ru/post_img/2014/06/01/7/1401617621_266861562.jpg" alt="Пусто" height="500"/>
        </div>
    </div>
}
else if(ListOfGames.Count == 0)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://acegif.com/wp-content/uploads/loading-11.gif" alt="Нет игр" height="500"/>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var game in ListOfGames)
        {
            <IndividualGame Game="game" OnDeleteGame="DeleteGame" />
        }
    </div>
}


@code {
    [Parameter] public List<GameModel> ListOfGames { get; set; }

    void DeleteGame(GameModel game)
    {
        ListOfGames.Remove(game);
    }
}
